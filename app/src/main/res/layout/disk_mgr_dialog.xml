<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fdd_mgr_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/hdd_layout_0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fdd_margin"
        layout="@layout/hdd"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/hdd_layout_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fdd_margin"
        layout="@layout/hdd"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/fdd_layout_a"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fdd_margin"
        layout="@layout/fdd" />

    <include
        android:id="@+id/fdd_layout_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/fdd_margin"
        layout="@layout/fdd" />

    <include
        android:id="@+id/fdd_layout_c"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/fdd_margin"
        layout="@layout/fdd"
        android:visibility="gone" />

    <include
        android:id="@+id/fdd_layout_d"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/fdd_margin"
        layout="@layout/fdd"
        android:visibility="gone" />

</LinearLayout>