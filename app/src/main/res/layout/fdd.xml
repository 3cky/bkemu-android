<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fdd_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floppy_drive_case"
    android:padding="5dp"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/fdd_label"
        android:tag="fdd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textSize="24sp"
        android:textColor="@color/fdd_label"
        android:text="A"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/fdd_image"
        android:tag="fdd_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fdd_label"
        android:src="@drawable/floppy_drive" />

    <TextView
        android:id="@+id/fdd_file"
        android:tag="fdd_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fdd_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:text="@string/fdd_empty"
        android:textColor="@color/fdd_empty" />

</RelativeLayout>