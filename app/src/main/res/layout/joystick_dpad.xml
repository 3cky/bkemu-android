<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/joy_btn_margin"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/joy_left"
        android:tag="LEFT"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="@dimen/joy_btn_size"
            android:layout_height="@dimen/joy_btn_size"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:padding="@dimen/joy_image_padding"
            android:src="@drawable/joy_arrow_left"
            android:background="@drawable/joy_red"
            app:tint="@color/joy_text" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/joy_up"
            android:tag="UP"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="@dimen/joy_btn_size"
                android:layout_height="@dimen/joy_btn_size"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/joy_btn_half_size"
                android:duplicateParentState="true"
                android:background="@drawable/joy_red"
                android:padding="@dimen/joy_image_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/joy_arrow_up"
                app:tint="@color/joy_text" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/joy_down"
            android:tag="DOWN"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="@dimen/joy_btn_size"
                android:layout_height="@dimen/joy_btn_size"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/joy_btn_half_size"
                android:duplicateParentState="true"
                android:scaleType="fitCenter"
                android:padding="@dimen/joy_image_padding"
                android:src="@drawable/joy_arrow_down"
                android:background="@drawable/joy_red"
                app:tint="@color/joy_text" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/joy_right"
        android:tag="RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="@dimen/joy_btn_size"
            android:layout_height="@dimen/joy_btn_size"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:padding="@dimen/joy_image_padding"
            android:src="@drawable/joy_arrow_right"
            android:background="@drawable/joy_red"
            app:tint="@color/joy_text" />

    </FrameLayout>

</LinearLayout>